{
  "name": "hollowverse-api",
  "version": "1.0.0",
  "private": true,
  "description": "GraphQL API for Hollowverse",
  "repository": "https://github.com/hollowverse/api.git",
  "scripts": {
    "lint": "npm-run-all -s generate-graphql-types -p -c common-check validate-queries lint-js lint-ts lint-schema find-breaking-schema-changes check-ts",
    "clean-clients": "del-cli clients",
    "pretest": "run-s lint clean-clients",
    "test": "TZ=UTC jest --colors",
    "find-breaking-schema-changes": "node -r 'ts-node/register' src/scripts/findBreakingSchemaChanges.ts",
    "validate-queries": "graphql-validator -s './src/schema.graphql' '{src,clients}/**/*.graphql'",
    "lint-schema": "graphql-schema-linter src/schema.graphql",
    "check-ts": "tsc --project ./src --noEmit",
    "lint-js": "eslint '**/*.js{,x}'",
    "lint-ts/eslint": "eslint '**/*.ts{,x}'",
    "lint-ts/tslint": "tslint './*.ts' 'src/**/*,ts{,x}' -e 'src/typings/schema.ts' -e 'src/database/migrations/*.ts' --project .",
    "lint-ts": "run-p -c --aggregate-output 'lint-ts/*'",
    "introspect-schema": "apollo-codegen introspect-schema src/schema.graphql --output schema.json",
    "generate-types-from-template": "gql-gen --file ./schema.json --project src/typings",
    "generate-graphql-types": "run-s introspect-schema generate-types-from-template",
    "generate-graphql-types/dev": "nodemon -q --watch src/schema.graphql --exec 'run-p generate-graphql-types'",
    "server/dev": "NODE_ENV=development serverless offline start --watch --noTimeout --skipCacheInvalidation --dontPrintOutput",
    "dev": "npm-run-all -s generate-graphql-types -p '*/dev'",
    "database/mock": "ts-node src/scripts/insertMockData.ts --project ./src",
    "clean": "del-cli '.serverless' '.webpack'",
    "validate-filenames": "validate-filenames",
    "lint-staged": "lint-staged",
    "deploy": "babel-node ./deploy.js",
    "pre-push": "yarn pretest",
    "pre-commit": "yarn common-check",
    "common-check": "run-p -c --aggregate-output validate-filenames 'clown check' check-integrity",
    "tslint": "yarn lint-ts",
    "jest": "TZ=UTC NODE_ENV=test jest",
    "clown": "clown",
    "check-integrity": "yarn check --integrity"
  },
  "license": "Unlicense",
  "homepage": "https://github.com/hollowverse/api#readme",
  "lint-staged": {
    "**/*.md": [
      "prettier --write",
      "git add"
    ],
    "**/*.{j,t}s{x,}": [
      "prettier --write",
      "git add"
    ],
    "**/*.{graphql,gql}": [
      "prettier --write",
      "git add"
    ],
    "**/*.js{x,}": [
      "eslint"
    ],
    "src/schema.graphql": [
      "graphql-schema-linter"
    ],
    "**/!(package).json": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-p -c --aggregate-output lint-staged pre-commit",
      "pre-push": "yarn pre-push",
      "post-merge": "yarnhook",
      "post-checkout": "yarnhook",
      "post-rewrite": "yarnhook"
    }
  },
  "resolutions": {
    "graphql": "^0.11.0",
    "babel-core": "^7.0.0-bridge.0"
  },
  "dependencies": {
    "@babel/polyfill": "^7.0.0-beta.46",
    "@babel/runtime": "^7.0.0-beta.46",
    "@hollowverse/class-sanitizer": "^0.1.2",
    "@hollowverse/utils": "^7.0.1",
    "apollo-server-express": "^1.3.2",
    "aws-sdk": "^2.238.1",
    "aws-serverless-express": "^3.2.0",
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.2",
    "class-validator": "^0.7.2",
    "common-tags": "^1.7.2",
    "cors": "^2.8.4",
    "dataloader": "^1.3.0",
    "express": "^4.16.2",
    "faker": "^4.1.0",
    "got": "^7.1.0",
    "graphql": "^0.11.0",
    "graphql-iso-date": "^3.5.0",
    "graphql-playground-middleware-express": "^1.6.0",
    "graphql-tools": "^2.21.0",
    "helmet": "^3.9.0",
    "lodash": "^4.17.5",
    "loggy": "^1.0.2",
    "moment": "^2.19.2",
    "mysql": "^2.14.1",
    "node-vibrant": "^3.0.0",
    "reflect-metadata": "^0.1.10",
    "typeorm": "^0.1.12",
    "validator": "^9.0.0",
    "wait-for-mysql": "^1.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.46",
    "@babel/core": "^7.0.0-beta.46",
    "@babel/node": "^7.0.0-beta.46",
    "@babel/plugin-transform-runtime": "^7.0.0-beta.46",
    "@babel/preset-env": "^7.0.0-beta.46",
    "@babel/preset-stage-3": "^7.0.0-beta.46",
    "@creditkarma/graphql-loader": "^0.7.1",
    "@creditkarma/graphql-validator": "^0.5.0",
    "@forabi/graphql-request": "^1.6.8",
    "@hollowverse/clown": "^3.1.1",
    "@hollowverse/config": "^32.0.0",
    "@hollowverse/validate-filenames": "^3.0.2",
    "@playlyfe/gql": "^2.6.0",
    "@types/aws-serverless-express": "^3.0.1",
    "@types/body-parser": "^1.16.5",
    "@types/common-tags": "^1.4.0",
    "@types/cors": "^2.8.3",
    "@types/express": "^4.11.1",
    "@types/faker": "^4.1.2",
    "@types/get-port": "^3.2.0",
    "@types/got": "^7.1.4",
    "@types/helmet": "^0.0.37",
    "@types/jest": "^22.2.0",
    "@types/lodash": "^4.14.74",
    "@types/node": "^8.0.8",
    "@types/shelljs": "^0.7.4",
    "@types/uglifyjs-webpack-plugin": "^1.1.0",
    "@types/uuid": "^3.4.2",
    "@types/validator": "^6.3.0",
    "@types/webpack": "^4.1.4",
    "@types/webpack-node-externals": "^1.6.3",
    "babel-eslint": "^8.2.2",
    "babel-loader": "^8.0.0-beta.2",
    "copy-webpack-plugin": "^4.5.1",
    "del-cli": "^1.1.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "eslint-plugin-typescript": "^0.11.0",
    "get-port": "^3.2.0",
    "graphql-code-generator": "^0.8.21",
    "graphql-schema-linter": "^0.1.1",
    "graphql-tag": "^2.8.0",
    "husky": "^1.0.0-rc.1",
    "jest": "^22.4.2",
    "lint-staged": "^7.0.5",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.12.0",
    "promise-mysql": "^3.2.1",
    "serverless": "^1.26.1",
    "serverless-apigw-binary": "^0.4.4",
    "serverless-content-encoding": "^1.0.22",
    "serverless-domain-manager": "^2.3.6",
    "serverless-offline": "^3.20.3",
    "serverless-webpack": "^5.1.2",
    "shelljs": "^0.7.8",
    "ts-jest": "^22.4.1",
    "ts-loader": "^4.2.0",
    "ts-node": "^3.2.0",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.8.0",
    "tslint-eslint-rules": "^5.0.0",
    "tslint-language-service": "^0.9.9",
    "tslint-microsoft-contrib": "^5.0.3",
    "tslint-react": "^3.5.1",
    "typescript": "^2.8.1",
    "typescript-eslint-parser": "^15.0.0",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "uuid": "^3.1.0",
    "webpack": "^4.6.0",
    "webpack-cli": "^2.0.15",
    "webpack-node-externals": "^1.7.2",
    "yarnhook": "^0.2.0"
  },
  "engines": {
    "node": ">= 8.10"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "useBabelrc": true
      }
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "globalSetup": "./globalTestSetup.js",
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "modulePathIgnorePatterns": [
      "bin"
    ]
  },
  "main": "index.js"
}
