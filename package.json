{
  "name": "hollowverse-api",
  "version": "1.0.0",
  "private": true,
  "description": "Release Manager provides cookie-based traffic splitting for hollowverse.com",
  "repository": "https://github.com/hollowverse/api.git",
  "scripts": {
    "test": "run-p validate-file-names lint-js lint-ts",
    "lint-js": "eslint '**/*.js{,x}'",
    "lint-ts": "tslint './*.ts' 'server/src/*.ts{,x}'",
    "dev": "PORT=8080 nodemon --watch ./src --ext ts,graphql,tsx,json --exec 'ts-node src/server.ts --project .'",
    "build": "tsc --project ./src",
    "clean": "rm -rf ./dist",
    "start": "node dist/releaseManager.js",
    "validate-file-names": "validate-file-names",
    "lint-staged": "lint-staged"
  },
  "license": "Unlicense",
  "homepage": "https://github.com/hollowverse/api#readme",
  "lint-staged": {
    "**/*.{j,t}s{x,}": [
      "prettier --write --single-quote --trailing-comma all",
      "git add"
    ],
    "**/*.graphql": [
      "prettier --write --single-quote --trailing-comma all",
      "git add"
    ],
    "**/*.js{x,}": [
      "eslint"
    ]
  },
  "pre-commit": [
    "validate-file-names",
    "lint-staged"
  ],
  "dependencies": {
    "@hollowverse/common": "https://github.com/hollowverse/common",
    "@types/body-parser": "^1.16.5",
    "apollo-server-express": "^1.1.2",
    "body-parser": "^1.18.2",
    "cookie-parser": "^1.4.3",
    "express": "^4.15.2",
    "graphql": "^0.11.3",
    "graphql-tools": "^1.2.3",
    "npm-run-all": "^4.0.2"
  },
  "devDependencies": {
    "@types/express": "^4.0.36",
    "@types/node": "^8.0.8",
    "babel-eslint": "^7.2.3",
    "eslint": "^4.5.0",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-config-prettier": "^2.3.0",
    "eslint-import-resolver-webpack": "^0.8.3",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.3.0",
    "lint-staged": "^4.0.3",
    "nodemon": "^1.11.0",
    "pre-commit": "^1.2.2",
    "prettier": "^1.5.3",
    "stylelint": "^8.0.0",
    "stylelint-config-standard": "^17.0.0",
    "stylelint-no-unsupported-browser-features": "^1.0.0",
    "ts-node": "^3.2.0",
    "tslint": "^5.6.0",
    "tslint-config-prettier": "^1.3.0",
    "tslint-eslint-rules": "^4.1.1",
    "tslint-loader": "^3.5.3",
    "tslint-microsoft-contrib": "^5.0.1",
    "tslint-react": "^3.2.0",
    "typescript": "^2.5.2"
  },
  "engines": {
    "node": ">= 8.1"
  }
}
