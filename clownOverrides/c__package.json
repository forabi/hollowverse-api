{
  "scripts": {
    "check-ts": "tsc --project ./src --noEmit",
    "pre-commit": "yarn common-check",
    "pre-push": "yarn pretest",
    "lint-ts/tslint":
      "tslint '**/*.ts{,x}' --project .  --exclude '**/node_modules/**' --exclude '**/.serverless/**'  --exclude '**/.webpack/**'  --exclude '**/dist/**' --exclude 'src/typings/schema.ts' --exclude 'clients/**/*' --exclude 'src/database/migrations/*.ts'"
  },
  "devDependencies": {
    "ts-jest": "^23.0.1",
    "typescript": "^3.0.3",
    "typescript-eslint-parser": "^18.0.0"
  }
}
